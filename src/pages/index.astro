---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/sections/header.astro';
import HeroSection from '@/sections/hero-section.astro';
import GlobeSection from '@/sections/globe-section.astro';
import PracticalInfo from '@/sections/practical-info.astro';
import Footer from '@/sections/footer.astro';
import { RsvpForm } from '@/components/RsvpForm';
import { EventModal } from '@/components/EventModal';
---

<BaseLayout title="Anaël & Eric — 18-20 octobre 2026 — Tel Aviv">
  <Header />
  <main id="main-content">
    <HeroSection />
    <GlobeSection />
    <PracticalInfo />
  </main>
  <Footer />

  {/* Global modal islands — controlled by nanostores */}
  <RsvpForm client:load />
  <EventModal client:visible />
</BaseLayout>
