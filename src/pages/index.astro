---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/sections/header.astro';
import HeroSection from '@/sections/hero-section.astro';
import GlobeSection from '@/sections/globe-section.astro';
import PracticalInfo from '@/sections/practical-info.astro';
import Footer from '@/sections/footer.astro';
import { RsvpForm } from '@/components/RsvpForm';
import { EventModal } from '@/components/EventModal';
---

<BaseLayout title="Anaël & Eric — 18-20 octobre 2026 — Tel Aviv">
  <Header />
  <main id="main-content">
    <HeroSection />

    <!-- Section divider: Hero → Globe -->
    <div class="flex flex-col items-center justify-center py-12 sm:py-16 bg-background" aria-hidden="true">
      <div class="flex items-center gap-4">
        <span class="block w-24 sm:w-32 h-px bg-gradient-to-r from-transparent via-accent/30 to-transparent"></span>
        <span class="text-accent/50 text-xs">✧</span>
        <span class="block w-24 sm:w-32 h-px bg-gradient-to-r from-transparent via-accent/30 to-transparent"></span>
      </div>
    </div>

    <GlobeSection />

    <!-- Section divider: Globe → Practical Info -->
    <div class="flex flex-col items-center justify-center py-12 sm:py-16 bg-background" aria-hidden="true">
      <div class="flex items-center gap-4">
        <span class="block w-24 sm:w-32 h-px bg-gradient-to-r from-transparent via-accent/30 to-transparent"></span>
        <span class="text-accent/50 text-xs">✧</span>
        <span class="block w-24 sm:w-32 h-px bg-gradient-to-r from-transparent via-accent/30 to-transparent"></span>
      </div>
    </div>

    <PracticalInfo />
  </main>
  <Footer />

  {/* Global modal islands — controlled by nanostores */}
  <RsvpForm client:load />
  <EventModal client:load />
</BaseLayout>
