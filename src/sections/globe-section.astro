---
import { GlobeJourney } from '@/components/GlobeJourney';
---

<section
  id="journey"
  class="relative bg-card min-h-screen"
  aria-label="Interactive wedding journey from Paris to Israel"
>
  <!-- Section title -->
  <div class="text-center pt-12 pb-6 px-4">
    <h2 class="font-heading text-accent text-3xl sm:text-4xl" data-i18n="globe.section_title">
      Notre voyage
    </h2>
    <!-- Scroll hint -->
    <p class="mt-3 font-body text-foreground/50 text-sm tracking-wide" data-i18n="globe.scroll_hint">
      Faites d√©filer pour explorer
    </p>
    <!-- Animated down arrow -->
    <div class="mt-2 animate-bounce text-accent/60" aria-hidden="true">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </div>

  <GlobeJourney client:visible />
</section>
