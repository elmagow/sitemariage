---
import { GlobeJourney } from '@/components/GlobeJourney';
---

<section
  id="journey"
  class="relative min-h-screen"
  style="background: linear-gradient(to bottom, var(--color-card), var(--color-background));"
  data-i18n-aria="globe.aria_label"
  aria-label="Globe interactif montrant le parcours Paris - Tel Aviv"
>
  <!-- Warm radial glow behind globe -->
  <div
    class="pointer-events-none absolute inset-0"
    style="background: radial-gradient(ellipse 60% 50% at 50% 60%, oklch(0.78 0.08 70 / 0.18), transparent);"
    aria-hidden="true"
  ></div>

  <!-- Section title -->
  <div class="relative text-center pt-16 pb-8 px-4">
    <h2
      class="font-heading text-accent text-3xl sm:text-4xl md:text-5xl text-balance animate-fade-up delay-200"
      data-i18n="globe.section_title"
    >
      Notre voyage
    </h2>

    <!-- Ornamental divider -->
    <div class="mt-4 flex items-center justify-center gap-3 animate-fade-in delay-200" aria-hidden="true">
      <span class="block h-px w-12 bg-accent/30"></span>
      <span class="font-heading text-accent/50 text-sm select-none">&#10023;</span>
      <span class="block h-px w-12 bg-accent/30"></span>
    </div>

    <!-- Scroll hint -->
    <p
      class="mt-4 font-body text-muted-foreground text-sm tracking-wide animate-fade-up delay-400"
      data-i18n="globe.scroll_hint"
    >
      Faites d√©filer pour explorer
    </p>

    <!-- Animated down arrow -->
    <div class="mt-3 animate-scroll-hint text-accent/40 motion-reduce:animate-none delay-500" aria-hidden="true">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </div>

  <GlobeJourney client:visible />
</section>
