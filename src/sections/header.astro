---
import { HeaderControls } from '@/components/HeaderControls';
---

<header class="fixed top-0 inset-x-0 z-50 animate-fade-in">
  <!-- Frosted glass bar -->
  <div class="bg-background/80 backdrop-blur-md border-b border-border/50">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 h-16 md:h-[4.5rem] flex items-center justify-between">
      <!-- Logo -->
      <a
        href="#hero"
        class="font-heading italic text-2xl md:text-[1.7rem] text-foreground tracking-widest hover:text-accent transition-all duration-300 hover:scale-105 origin-center"
      >
        A &amp; E
      </a>

      <!-- Controls island -->
      <HeaderControls client:load />
    </div>
  </div>
  <!-- Subtle gold accent line -->
  <div class="h-px bg-gradient-to-r from-transparent via-accent/40 to-transparent" aria-hidden="true"></div>
</header>
