<footer class="bg-foreground text-background py-16 sm:py-20 px-4" style="background: linear-gradient(to bottom, #2C1810, #1E100A)">
  <!-- Subtle gold line at top -->
  <div class="h-px bg-gradient-to-r from-transparent via-accent/40 to-transparent"></div>

  <div class="mx-auto max-w-6xl text-center pt-12">
    <!-- A & E monogram -->
    <p class="font-heading italic text-accent text-4xl sm:text-5xl mb-6" aria-hidden="true">A &amp; E</p>

    <!-- Ornamental divider -->
    <div class="flex items-center justify-center gap-3 mb-8" aria-hidden="true">
      <span class="block w-16 sm:w-24 h-px bg-gradient-to-r from-transparent to-accent/40"></span>
      <span class="text-background/30 text-xs">✧</span>
      <span class="block w-16 sm:w-24 h-px bg-gradient-to-l from-transparent to-accent/40"></span>
    </div>

    <!-- From with love -->
    <p class="text-background/60 text-lg sm:text-xl font-heading italic" data-i18n="footer.from_with_love">
      Avec amour, de Paris à Tel Aviv
    </p>

    <!-- Made with love & copyright -->
    <div class="mt-8 space-y-1">
      <p class="text-background/40 text-sm" data-i18n="footer.made_with_love">
        Fait avec amour par les mariés
      </p>
      <p class="text-background/40 text-sm" data-i18n="footer.copyright">
        © 2026 Anaël &amp; Eric
      </p>
    </div>
  </div>
</footer>
