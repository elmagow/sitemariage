---
import { Countdown } from '@/components/Countdown';
---

<section
  id="hero"
  class="relative min-h-screen flex flex-col items-center justify-center pt-20 pb-12 px-4 bg-background text-center overflow-hidden"
>
  <!-- Atmospheric warm radial glow -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: radial-gradient(ellipse 70% 50% at 50% 45%, rgba(212,168,83,0.08) 0%, rgba(240,230,211,0.04) 40%, transparent 70%);"
    aria-hidden="true"
  ></div>

  <!-- Subtle decorative pattern texture -->
  <div
    class="absolute inset-0 pointer-events-none opacity-[0.018]"
    style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23D4A853' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E&quot;); background-size: 60px 60px;"
    aria-hidden="true"
  ></div>

  <!-- Invitation border frame -->
  <div class="invitation-border relative w-full max-w-2xl mx-auto flex flex-col items-center py-16 px-8 sm:px-12">
    <!-- Corner flourishes -->
    <span class="invitation-corner invitation-corner--tl" aria-hidden="true"></span>
    <span class="invitation-corner invitation-corner--tr" aria-hidden="true"></span>
    <span class="invitation-corner invitation-corner--bl" aria-hidden="true"></span>
    <span class="invitation-corner invitation-corner--br" aria-hidden="true"></span>

    <!-- Decorative top divider -->
    <div class="flex items-center justify-center gap-4 text-accent mb-10 animate-fade-in delay-200" aria-hidden="true">
      <span class="block w-16 h-px" style="background: linear-gradient(90deg, transparent, var(--accent), transparent); opacity: 0.5;"></span>
      <span class="text-sm tracking-widest">✧</span>
      <span class="block w-16 h-px" style="background: linear-gradient(90deg, transparent, var(--accent), transparent); opacity: 0.5;"></span>
    </div>

    <!-- Couple names -->
    <h1
      class="font-heading italic text-gold-shimmer text-[clamp(2.75rem,9vw,5.5rem)] leading-tight text-balance animate-fade-up delay-300"
      data-i18n="hero.title"
    >
      Anaël &amp; Eric
    </h1>

    <!-- Subtitle -->
    <p
      class="mt-5 font-heading italic text-foreground/60 text-lg sm:text-xl tracking-wider max-w-md animate-fade-up delay-500"
      data-i18n="hero.subtitle"
    >
      Nous nous marions !
    </p>

    <!-- Decorative middle divider -->
    <div class="flex items-center justify-center gap-4 text-accent my-8 animate-fade-in delay-600" aria-hidden="true">
      <span class="block w-12 h-px" style="background: linear-gradient(90deg, transparent, var(--accent), transparent); opacity: 0.4;"></span>
      <span class="text-xs tracking-widest">✧</span>
      <span class="block w-12 h-px" style="background: linear-gradient(90deg, transparent, var(--accent), transparent); opacity: 0.4;"></span>
    </div>

    <!-- Date -->
    <p
      class="font-heading text-foreground text-xl sm:text-2xl tracking-[0.2em] animate-fade-up delay-700"
      data-i18n="hero.date"
    >
      18 – 20 octobre 2026
    </p>

    <!-- Location -->
    <p
      class="mt-3 font-body text-foreground/60 text-base sm:text-lg tracking-wide animate-fade-up delay-800"
      data-i18n="hero.location"
    >
      Tel Aviv, Israël
    </p>

    <!-- Decorative bottom divider -->
    <div class="flex items-center justify-center gap-4 text-accent mt-10 mb-2 animate-fade-in delay-900" aria-hidden="true">
      <span class="block w-12 h-px" style="background: linear-gradient(90deg, transparent, var(--accent), transparent); opacity: 0.4;"></span>
      <span class="text-xs tracking-widest">✧</span>
      <span class="block w-12 h-px" style="background: linear-gradient(90deg, transparent, var(--accent), transparent); opacity: 0.4;"></span>
    </div>

    <!-- Countdown -->
    <div class="mt-8 animate-scale-in delay-1000">
      <Countdown client:load />
    </div>
  </div>
</section>
